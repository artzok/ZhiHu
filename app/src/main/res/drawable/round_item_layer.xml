<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="8dp"/>
            <stroke android:width="3px" android:color="@color/color_item_shadow"/>
        </shape>
    </item>
    <item>
        <inset
            android:insetBottom="3px" android:insetRight="1px" >
            <shape android:shape="rectangle">
                <corners android:radius="8dp"/>
                <stroke android:width="3px" android:color="@color/color_item_frame"/>
                <solid  android:color="@color/color_item_solid"/>
            </shape>
        </inset>
    </item>
</layer-list>

